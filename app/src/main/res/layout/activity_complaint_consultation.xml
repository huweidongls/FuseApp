<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guoyu.fuseapp.page.ComplaintConsultationActivity">
    <RelativeLayout
        style="@style/rl_top_bar"
        >
        <RelativeLayout
            android:id="@+id/iv_black"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                style="@style/iv_top_back" />
        </RelativeLayout>
        <TextView
            style="@style/tv_top_title"
            android:text="投诉咨询"
            />
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:text="发布"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_magic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@+id/rl_magic"
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:id="@+id/empty_order_bloacks"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="166dp"
            android:layout_height="109dp"
            android:src="@mipmap/empty3x"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_below="@id/iv_img"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text="暂无相关数据!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</LinearLayout>
