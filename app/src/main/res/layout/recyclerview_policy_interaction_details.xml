<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="18dp"
    >
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/gl_img0013x"
        />
    <TextView
        android:id="@+id/tv_tel"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="186****7329"
        android:layout_marginLeft="10dp"
        android:textColor="#333333"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="01月02日 9:10"
        android:layout_below="@+id/tv_tel"
        android:layout_toRightOf="@+id/iv_img"
        android:textSize="12sp"
        android:textColor="#333333"
        />
    <!--<ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@mipmap/fenxiang"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="57dp"
        />-->
    <ImageView
        android:id="@+id/iv_good"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/icon004"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        />
    <TextView
        android:id="@+id/tv_looknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="20"
        android:textColor="#333333"
        android:textSize="13sp"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这个内容过于真实，点赞!"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="9dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#F4F4F4"
        />
</LinearLayout>
