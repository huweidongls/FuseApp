<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guoyu.fuseapp.page.PolicyInteractionActivity">
    <RelativeLayout style="@style/rl_top_bar">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView style="@style/iv_top_back" />
        </RelativeLayout>
        <TextView
            style="@style/tv_top_title"
            android:text="政策互动" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/textview_border"
        >
        <ImageView
            android:id="@+id/iv_s"
            android:layout_width="11dp"
            android:layout_height="12dp"
            android:src="@mipmap/seach3x"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:layout_toRightOf="@+id/iv_s"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入互动政策名称进行搜索"
            android:textColor="#9D9D9D"
            android:background="@null"
            android:layout_marginLeft="6dp"
            android:textSize="14sp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/img0063x"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        >
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_t1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="政策咨询"
               android:textSize="14sp"
               android:textColor="#D62424"
               android:layout_marginLeft="34dp"
               />
           <View
               android:layout_below="@+id/tv_t1"
               android:layout_width="58dp"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="34dp"
               android:background="#D62424"
               android:layout_height="2dp" />
       </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67dp"
            >
            <TextView
                android:id="@+id/tv_t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="政策咨询"
                android:textSize="14sp"
                android:textColor="#333333"
                />
            <View
                android:visibility="gone"
                android:layout_below="@+id/tv_t2"
                android:layout_width="58dp"
                android:layout_marginTop="15dp"
                android:background="#D62424"
                android:layout_height="2dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            >
            <TextView
                android:id="@+id/tv_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="政策咨询"
                android:textSize="14sp"
                android:textColor="#333333"
                />
            <View
                android:visibility="gone"
                android:layout_below="@+id/tv_t3"
                android:layout_width="58dp"
                android:layout_marginTop="15dp"
                android:background="#D62424"
                android:layout_height="2dp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#CDCED1"
        android:layout_height="1dp" />
    <android.support.v7.widget.RecyclerView
        android:background="@color/white_ffffff"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:background="@color/white_ffffff"
        android:id="@+id/rv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:background="@color/white_ffffff"
        android:id="@+id/rv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
